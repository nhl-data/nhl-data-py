{
	"name": "NHL Data Python Development",
	"image": "python:3.11-bookworm",
	//  Run Args
	"runArgs": ["--name", "nhl_data_py_dev_container"],
	// ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
	"features": {
		// Basic Utilities to help with Development
		"ghcr.io/devcontainers/features/common-utils:2": {"username": "nhl-data-dev"}
	},

	// ðŸ‘‡ Configure tool-specific properties.
	"customizations": {
        "vscode": {
            "extensions": [
				"ms-python.python",
				"njpwerner.autodocstring",
				"redhat.vscode-yaml",
				"ms-azuretools.vscode-docker",
				"GitHub.copilot",
				"oderwat.indent-rainbow",
				"streetsidesoftware.code-spell-checker",
				"tamasfe.even-better-toml"
			]
		}
	},

	"remoteUser": "nhl-data-dev",

	// ðŸ‘‡ Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "sh ./.devcontainer/post_create.sh"
}
